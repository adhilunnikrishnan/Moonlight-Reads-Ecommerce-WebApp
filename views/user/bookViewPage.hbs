<main class="main">
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="product-detail accordion-detail">
            <div class="row mb-50">

              <!-- LEFT SIDE -->
              <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="detail-gallery">
                  <span class="zoom-icon"><i class="fi-rs-search"></i></span>

                  <!-- Main Slider -->
                  <div class="product-image-slider">
                    {{#each book.images}}
                      <figure class="border-radius-10">
                        <img src="{{this}}" alt="book image" />
                      </figure>
                    {{/each}}
                  </div>

                  <!-- Thumbnail Navigation -->
                  <div class="slider-nav-thumbnails pl-15 pr-15">
                    {{#each book.images}}
                      <div>
                        <img src="{{this}}" alt="book image" />
                      </div>
                    {{/each}}
                  </div>
                </div>
              </div>

              <!-- RIGHT SIDE -->
              <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="detail-info">
                  <h2 class="title-detail">{{book.title}}</h2>

                  <div class="product-detail-rating">
                    <div class="pro-details-brand">
                      <span>Publisher: <a href="#">{{book.publisher}}</a></span>
                    </div>
                    <div class="product-rate-cover text-end">
                      <div class="product-rate d-inline-block">
                        <div class="product-rating" style="width:{{book.ratingPercent}}%"></div>
                      </div>
                      <span class="font-small ml-5 text-muted">({{book.rating}} rating)</span>
                    </div>
                  </div>

                  <div class="clearfix product-price-cover">
                    <div class="product-price primary-color float-left">
                      {{#if book.discountPrice}}
                        <ins><span class="text-brand">₹{{book.discountPrice}}</span></ins>
                        <ins><span class="old-price font-md ml-15">₹{{book.regularPrice}}</span></ins>
                      {{else}}
                        <ins><span class="text-brand">₹{{book.regularPrice}}</span></ins>
                      {{/if}}
                    </div>
                  </div>

                  <div class="bt-1 border-color-1 mt-15 mb-15"></div>

                  <div class="short-desc mb-30">
                    <p>{{book.shortDesc}}</p>
                  </div>

                  <div class="product_sort_info font-xs mb-30">
                    <ul>
                      <li class="mb-10">
                        <i class="fi-rs-crown mr-5"></i>
                        Author: {{book.author}}
                      </li>

                      <li class="mb-10">
                        <i class="fi-rs-badge mr-5"></i>
                        {{stockStatus}}
                      </li>
                    </ul>
                  </div>

                  <div class="bt-1 border-color-1 mt-30 mb-30"></div>

                  <!-- ERROR MESSAGE -->
                  {{#if error}}
                    <div class="alert alert-danger mb-20">{{error}}</div>
                  {{/if}}

                  <!-- ADD TO CART FORM -->
                  <form action="/add-to-cart" method="POST" class="add-to-cart-form">
                    <div class="detail-qty border radius mb-20">
                      <input type="number" name="quantity" value="1" min="1" class="qty-input text-center" />
                    </div>

                    <input type="hidden" name="bookId" value="{{book._id}}" />
                    <input type="hidden" name="title" value="{{book.title}}" />
                    <input type="hidden" name="price" value="{{#if book.discountPrice}}{{book.discountPrice}}{{else}}{{book.regularPrice}}{{/if}}" />
                    <input type="hidden" name="image" value="{{book.images.[0]}}" />
                    <input type="hidden" name="shortDesc" value="{{book.shortDesc}}" />

                    <div class="product-extra-link2">
                      <button type="submit" class="button button-add-to-cart">Add to cart</button>
                    </div>
                  </form>

                </div>
              </div>
            </div>

            <!-- DESCRIPTION -->
            <div class="row">
              <div class="col-lg-10 m-auto entry-main-content">
                <h2 class="section-title style-1 mb-30">Description</h2>
                <div class="description mb-50">
                  <p>{{book.description}}</p>
                </div>
              </div>
            </div>

            <!-- RELATED BOOKS -->
            <div class="row mt-60">
              <div class="col-12">
                <h3 class="section-title style-1 mb-30">Related Books</h3>
              </div>

              <div class="col-12">
                <div class="row related-products">

                  {{#each relatedBooks}}
                    <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                      <div class="product-cart-wrap small hover-up">

                        <div class="product-img-action-wrap">
                          <div class="product-img product-img-zoom">
                            <a href="/bookview?id={{this._id}}">
                              <img class="default-img" src="{{this.images.[0]}}" alt="{{this.title}}" />
                            </a>
                          </div>

                          <div class="product-badges product-badges-position product-badges-mrg">
                            <span class="hot">{{this.category}}</span>
                          </div>
                        </div>

                        <div class="product-content-wrap">
                          <h2>
                            <a href="/bookview?id={{this._id}}">{{this.title}}</a>
                          </h2>

                          <div class="product-price">
                            {{#if this.discountPrice}}
                              <span>₹{{this.discountPrice}}</span>
                              <span class="old-price">₹{{this.regularPrice}}</span>
                            {{else}}
                              <span>₹{{this.regularPrice}}</span>
                            {{/if}}
                          </div>
                        </div>

                      </div>
                    </div>
                  {{/each}}

                </div>
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  </section>
</main>
